@model IEnumerable<FacultyInformationSystemEntities.WorkHistory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_FacultyLayout.cshtml";

}
</br>
<h1 class="text-center"> Add Work History Details </h1> </br>

<p>
    <div class="btn btn-sm btn-primary" data-toggle="tooltip" title="Create">
        <a class="text-light" asp-action="CreateJobHistory">Add Work History</a>
    </div>
</p>
<table class="table">
    <thead class="bg-success text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Organization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobBeginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobResponsibilities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobType)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Faculty)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Organization)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobBeginDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobEndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobResponsibilities)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobType)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Faculty.FacultyId)
                    </td>*@
                <td>
                    <div class="btn btn-sm btn-warning" data-toggle="tooltip" title="Edit">
                        <a class="text-light" asp-action="UpdateJobHistory" asp-route-id="@item.WorkHistoryId">Edit</a>
                    </div>
                    <div class="btn btn-sm btn-danger" data-toggle="tooltip" title="Delete">
                        <a class="text-light" asp-action="DeleteJobHistory" asp-route-id="@item.WorkHistoryId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
