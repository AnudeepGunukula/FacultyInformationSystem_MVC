@model FacultyInformationSystemEntities.Faculty

@{
    ViewData["Title"] = "FacultyIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
</br>
<h1 class="text-center">Update Faculty Details</h1> </br>

<h4>Faculty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetFacultyInfo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FacultyId" class="control-label"></label>
                <select asp-for="FacultyId" class="form-control" asp-items="@(new SelectList(@ViewBag.FacultyList,"FacultyId", "FacultyId"))">
                </select>
                <span asp-validation-for="FacultyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Admin">Back to List</a>
</div>

